# AI Microservice Environment Configuration
# Copy this file to .env and fill in the actual values

# Port Configuration
AI_ORCHESTRATOR_PORT=3380
NLP_SERVICE_PORT=3381
ASR_SERVICE_PORT=3382
DOCUMENT_AI_PORT=3383
PROTOTYPE_GENERATOR_PORT=3384
TEMPLATE_REPOSITORY_PORT=3385
FREE_AI_SERVICE_PORT=3386
AI_WORKERS_PORT=3387
GEMINI_AI_SERVICE_PORT=3388
DATA_VIZ_SERVICE_PORT=3389

# Database (Shared - External)
# All AI agents data, workflows, submissions, and related information stored in shared database
DB_HOST=db-server-postgres
DB_PORT=5432
DB_USER=dbadmin
DB_PASSWORD=
DB_NAME=statex_ai
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}
POSTGRES_PORT=${DB_PORT}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis (Shared - External)
REDIS_HOST=db-server-redis
REDIS_SERVER_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_SERVER_PORT}/2

# External Services (Shared Microservices)
# Logging Service - All services must send logs to centralized logging microservice
LOGGING_SERVICE_URL=https://logging.statex.cz
LOGGING_SERVICE_API_PATH=/api/logs

# Notification Service
NOTIFICATION_SERVICE_URL=https://notifications.statex.cz

# AI API Keys
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
HUGGINGFACE_API_KEY=

# S3/MinIO
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=
S3_SECRET_KEY=
MINIO_INTERNAL_HOST=minio
MINIO_INTERNAL_PORT=9000

# Service Configuration
ASR_MODE=free
AI_MODE=free
DEBUG=true
LOG_LEVEL=INFO
DEPLOYMENT_URL=
TEMPLATE_GIT_REPO=
UPLOAD_DIR=./data/uploads

# Network
NGINX_NETWORK_NAME=nginx-network
DOCKER_VOLUME_BASE_PATH=/srv/storagebox/statex/docker-volumes
